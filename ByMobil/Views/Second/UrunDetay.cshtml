@{
    Layout = "~/Views/Shared/_SimpleLayout.cshtml";
    ViewBag.Title = "Ürün Detay";
}
<div class="mx-auto min-h-screen w-full bg-white px-3">
    <div class="flex flex-row items-end gap-5 p-3">
        <button id="btnBack"
                class="flex h-16 w-1/3 flex-col items-center justify-center gap-1 border-none bg-red-600 p-1
            py-1 font-normal text-white transition hover:bg-red-700
           active:scale-110 active:bg-red-800">
            <img src="/icons/angles-left.svg" class="h-6 w-6" />
            Geri Dön
        </button>
    </div>

    <div class="relative bg-amber-100 px-4 py-2 text-sm">
        <div class="flex flex-row gap-1">
            <label class="font-semibold"> Kodu: </label>
            <span id:"urunKodu" class="font-normal">TENCERE-01</span>
        </div>
        <div class="flex flex-row gap-1">
            <label class="font-semibold"> Adı: </label>
            <span id:"urunAdi" class="font-normal">İndiksiyon Tabanlı 13 Parça Set</span>
        </div>
        <div class="flex flex-row gap-1">
            <label class="font-semibold"> Stok: </label>
            <span id:"stok" class="font-normal">10</span>
            <label class="font-semibold"> Net Stok: </label>
            <span id:"netStok" class="font-normal">-518</span>
        </div>
        <div class="flex flex-row gap-1">
            <label class="font-semibold"> Barkod: </label>
            <span id:"urunAdi" class="font-normal">111122223333</span>
        </div>
        <div class="flex flex-row gap-1">
            <label class="font-semibold"> Koli içi: </label>
            <span id:"urunAdi" class="font-normal">5</span>
        </div>
        <div class="flex flex-row gap-1">
            <label class="font-semibold"> İsk1 %: </label>
            <span id:"isk1" class="font-normal">0</span>
            <label class="font-semibold"> İsk2 %: </label>
            <span id:"isk2" class="font-normal">0</span>
            <label class="font-semibold"> Merkez: </label>
            <span id:"merkez" class="font-normal">10</span>
        </div>
    </div>
    
    <!-- Fiyatlar -->
    <div class="relative mx-3 mt-4 grid grid-cols-3 items-center gap-5 md:gap-10 lg:gap-15">
        <div class="flex flex-col gap-1">
            <label class="text-sm font-semibold">
                Fiyat Seçin :
            </label>
            <select id="fiyatSelect" class="h-10 rounded-md border border-gray-300 bg-white
                pl-10 text-lg text-gray-600 transition hover:border-blue-300 hover:ring
                hover:ring-blue-500 focus:border-blue-400 focus:ring-2 focus:ring-blue-600 focus:outline-none">
                <option>600</option>
                <option>650</option>
                <option>700</option>
            </select>
        </div>

        <div class="flex flex-col gap-1">
            <label class="text-sm font-semibold">
                Fiyat Girin :
            </label>
            <input id="fiyatInput" class="h-10 rounded-md border border-gray-300 bg-white
                pl-10 text-lg text-gray-600 transition placeholder:text-gray-600 hover:border-blue-300
                hover:ring hover:ring-blue-500 focus:border-blue-400 focus:ring-2
                focus:ring-blue-600 focus:outline-none" placeholder="600"/>
        </div>
        <div class="flex flex-col gap-1">
            <label class="text-sm font-semibold">
                Net Fiyat :
            </label>
            <span id="netFiyat" class="text-md pl-3 text-gray-800">600.00</span>
        </div>
    </div>

    <!-- Aciklama -->
    <div class="mx-3 mt-5 w-full">
        <input id="aciklama" class="h-10 w-full rounded-md border border-gray-300 bg-white
                pl-5 text-lg text-gray-600 transition placeholder:text-gray-600 hover:border-blue-300
                hover:ring hover:ring-blue-500 focus:border-blue-400 focus:ring-2
                focus:ring-blue-600 focus:outline-none" placeholder="Açıklama girebilirsiniz." />
    </div>

    <!-- Stok Yetersiz Alerti-->
    <div id="stokAlert" class="mx-3 mt-5 w-full justify-center rounded-md bg-rose-200 py-4 text-center text-lg font-normal text-red-800">
        Stok Yetersiz 
    </div>

    <!-- Miktar / Birim -->
    <div class="relative mt-4 grid grid-cols-3 items-center gap-3">
        <div class="flex flex-col gap-1 bg-amber-100 px-2 py-3">
            <label class="text-sm font-semibold">
                Miktar :
            </label>
            <input id="miktar" class="h-10 rounded-md border border-gray-300 bg-white
                pl-5 text-lg text-gray-600 transition placeholder:text-gray-600 hover:border-blue-300
                hover:ring hover:ring-blue-500 focus:border-blue-400 focus:ring-2
                focus:ring-blue-600 focus:outline-none" placeholder="9" />
        </div>

        <div class="flex flex-col gap-1 bg-amber-100 px-2 py-3">
            <label class="text-sm font-semibold">
                Birim :
            </label>
            <select id="birim" class="h-10 rounded-md border border-gray-300 bg-white
                pl-5 text-lg text-gray-600 transition hover:border-blue-300 hover:ring
                hover:ring-blue-500 focus:border-blue-400 focus:ring-2 focus:ring-blue-600 focus:outline-none">
                <option>ADET</option>
                <option>KOLI</option>
            </select>
            
        </div>
        <div class="flex flex-col items-center justify-center bg-amber-100 px-10 py-6">
            <button id="ekle" class="rounded-md bg-blue-500 px-5 py-3 text-sm text-white transition hover:bg-blue-600 focus:bg-blue-700">
                Ekle
            </button>
        </div>
    </div>

    <!-- TOGGLE BUTTONS -->
    <div class="mt-2 mb-2 grid grid-cols-2 justify-between gap-4 px-4 text-center font-medium text-blue-500">
        <button id="btnSatis"
                class="transition hover:text-blue-700 hover:underline">
            Son Satışlar
        </button>

        <button id="btnAlis"
                class="transition hover:text-blue-700 hover:underline">
            Son Alışlar
        </button>
    </div>


    <!-- TABLE HEADER -->
    <div id="tableHeader" class="mx-2 mt-1 justify-center border-t
        border-gray-300 bg-amber-100 py-2 text-center text-sm font-bold text-gray-700">
        Son Alışlar ve Satışlar
    </div>
    <div class="mx-2 grid grid-cols-[1fr_3fr_1fr_1fr]
    border-t-2 border-b-2 border-gray-300 bg-amber-100
        px-2 py-1 text-center text-sm font-bold text-gray-700">
        <div>Tarih</div>
        <div>Cari</div>
        <div>Miktar</div>
        <div>Fiyat</div>
    </div>

    <!-- Son Satislar -->
    <div id="sonSatislar" class="mx-2 bg-amber-100 text-center text-sm">

        <div class="grid grid-cols-[1fr_3fr_1fr_1fr] border-b border-gray-300 px-2 py-3 text-sm">
            <span>20/11/2025</span>
            <span>BERSHKA BASAKSEHIR</span>
            <span>2</span>
            <span>230,00</span>
        </div>

        <div class="grid grid-cols-[1fr_3fr_1fr_1fr] border-b border-gray-300 px-2 py-3 text-sm">
            <span>25/12/2025</span>
            <span>BERSHKA BASAKSEHIR</span>
            <span>2</span>
            <span>230,00</span>
        </div>

    </div>

    <!-- Son Alislar -->
    <div id="sonAlislar" class="mx-2 bg-amber-100 text-center text-sm">
        <div class="grid grid-cols-[1fr_3fr_1fr_1fr]
            border-b border-gray-300 px-2 py-3 text-sm">
            <span>25/12/2025</span>
            <span>ISTOÇ TOPTANCILAR ÇARŞISI</span>
            <span>14</span>
            <span>100,00</span>
        </div>
    </div>




</div>
<script>
    const alisBtn = document.getElementById("btnAlis");
    const satisBtn = document.getElementById("btnSatis");
    const alis = document.getElementById("sonAlislar");
    const satis = document.getElementById("sonSatislar");

    alisBtn.onclick = () => {
        alis.classList.remove("hidden");
        satis.classList.add("hidden");
        $("#tableHeader").text("Son Alışlar");
    };

    satisBtn.onclick = () => {
        satis.classList.remove("hidden");
        alis.classList.add("hidden");
        $("#tableHeader").text("Son Satışlar");

    };




    $(document).ready(function () {
        $("#btnBack").on("click", function () {
            window.history.back();
        });
    });

</script>